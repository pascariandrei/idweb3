
@{
    ViewBag.Title = "Index";
}

@using System.Web.Optimization
@model eUseControl.Models.UserLogin



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <link rel="stylesheet" href="~/Vendors/Css/login-style.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,700&display=swap" rel="stylesheet">
</head>
<body>
    <main>
        <div class="background">
            <div class="text">
                <h1>Login</h1>
                <p>No Account? <a href="@Url.Action("Index","Register")">Sign up</a></p>
            </div>
            <div class="box">
                @Html.ValidationSummary(true)
                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                {
                    @Html.AntiForgeryToken()
                    <form class="form">
                        @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Credential, new
                   {
                       placeholder = "example@gmail.com",
                       title = "Please enter you username",
                       value = "",
                       name = "username",
                       id = "username",
                       @class = "form-control"
                   })


                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Password, new
                   {
                       @class = "form-control",
                       type = "password",
                       title = "Please enter your password",
                       placeholder = "******",
                       value = "",
                       name = "password",
                       id = "password"
                   })


                        <input type="submit" class="button" value="Login">
                    </form>
                }
            </div>
        </div>
    </main>
</body>
</html>


